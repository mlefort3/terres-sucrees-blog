---
import type { CollectionEntry } from 'astro:content'
import { cn } from '@/utils'
import { Image } from 'astro:assets'

type Props = {
	posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props
---

<section class={cn(`grid gap-6 sm:grid-cols-2 lg:grid-cols-3`)}>
	{
		posts.length > 0 ? (
			posts.map((post) => {
				return (
					<a
						href={`/post/${post.slug}/`}
						class='
              group flex items-center gap-4 p-4 
              rounded-xl
              bg-[#e5e4f4] dark:bg-[#4c4a6b]
              shadow-sm hover:shadow transition-shadow
              dark:shadow-none dark:hover:shadow-md
            '
					>
						<Image
							src={post.data.heroImage}
							width={200}
							height={200}
							format='webp'
							alt={`Image of ${post.data.title}`}
							class='w-16 h-16 rounded-full object-cover'
						/>

						<h3
							class='font-semibold text-lg group-hover:underline line-clamp-2 
                       text-gray-900 dark:text-gray-100'
						>
							{post.data.title}
						</h3>
					</a>
				)
			})
		) : (
			<span class='text-gray-500 dark:text-gray-400'>There are no related posts yet. ðŸ˜¢</span>
		)
	}
</section>
